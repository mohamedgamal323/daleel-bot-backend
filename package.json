{
  "name": "daleel-bot",
  "version": "1.0.0",
  "description": "Daleel Bot - AI Knowledge Management System",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "./scripts/build.sh",
    "start": "cd src/backend && uvicorn main:app --host 0.0.0.0 --port 8000",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src/backend && python -m pytest -v",
    "test:frontend": "cd src/frontend && npm run test:unit",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd src/backend && python -m flake8 .",
    "lint:frontend": "cd src/frontend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd src/backend && python -m black .",
    "format:frontend": "cd src/frontend && npm run format"
  },
  "keywords": [
    "ai",
    "knowledge-management",
    "chatbot",
    "vue",
    "fastapi",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
